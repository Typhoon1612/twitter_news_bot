# Twitter API Credentials (from https://developer.twitter.com/)
API_KEY=your_twitter_api_key_here
API_SECRET=your_twitter_api_secret_here
ACCESS_TOKEN=your_twitter_access_token_here
ACCESS_SECRET=your_twitter_access_secret_here

# RSS Feed URLs (comma-separated for multiple feeds)
# Example: https://rss.example.com/feed1,https://rss.example.com/feed2
PICKNEWS_API_KEY=https://your-rss-feed-url.com/feed

# OpenAI API Key (optional - for rephrasing headlines)
# If not provided, bot will post headlines with minimal changes
OPENAI_API_KEY=your_openai_api_key_here

# Port for web service (Render will set this automatically)
PORT=3000
